<h1>会員情報編集</h1>
<%= form_with model: @customer, url: customers_infomation_up_date_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :email %>アドレス<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %>苗字<br>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %>名前<br>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana %>苗字カナ<br>
    <%= f.text_field :last_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana %>名前カナ<br>
    <%= f.text_field :first_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code %>郵便番号<br>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address %>住所<br>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number %>電話番号<br>
    <%= f.text_field :telephone_number %>
  </div>

    <%= f.submit "変更を保存" %>
    <%= link_to "退会する", customers_unsubscribe_path %>
<% end %>