<%= render "public/shared/error_messages", resource: resource %>

<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path  do |f| %>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <td><%= f.label :first_name, "姓" %><%= f.text_field :first_name %></td>
      <td>名<%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>(セイ)<%= f.text_field :last_name_kana %></td>
      <td>(メイ)<%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th>郵便番号（ハイフンなし)</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>パスワード（6文字以上）</th>
      <td>
        <%= f.label :"新規パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <td>
        <%= f.label :"パスワード(確認用)" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
  </thead>
</table>
  
<div class="actions">
    <%= f.submit "新規登録" %>
</div>
<% end %>

<h4>既に登録済みの方</h4>
<%= link_to  new_customer_session_path do %>
  <p>こちら
<% end %>
  からログインしてください。</P>