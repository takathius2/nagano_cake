<h1>販売商品詳細</h1>
<div>
    <%= image_tag @item.get_item_image(100,100) %></p>
    <p>商品名:<%= @item.name %></p>
    <P>商品説明:<%= @item.introduction %></P>
    <p>価格（税抜）:<%= @item.item_price %>円</p>
    <p>商品ジャンル名:<%= @item.genre.name %></p>
<%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
    <p>数量を選択</p>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.select :amount, *[1..10] %>
    <%= f.submit "カートに入れる" %>
<% end %>
<% if @item.id == current_admin %>
    <p><%= link_to "商品を編集する", edit_admin_item_path(@item.id) %></p>
<% end %>
</div>