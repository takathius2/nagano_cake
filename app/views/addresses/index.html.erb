<h1>自分の住所</h1>
<h4>氏名</h4><%= current_customer.last_name %> <%= current_customer.first_name %><br>
                 <%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %><br>
    <h4>住所</h4><%= current_customer.postal_code %><br><%= current_customer.address %><br>
<h2>お届け先一覧</h2>
<div>
    <table>
        <thead>
            <tr>
                <th>氏名</th>
                <th>〒</th>
                <th>住所</th>
            </tr>
        </thead>
        <tbody>
            <% @addresses.each do |address| %>
                <tr>
                    <td><%= address.order.name %></td><br>
                    <td><%= address.order.delivery_code %></td><br>
                    <td><%= address.order.delivery_address %></td><br>
                </tr>
                <%= link_to "お届け先を編集", addresses_edit_path %>
            <% end %>
        </tbody>
    </table>
</div>