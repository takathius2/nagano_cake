
<h4>商品一覧</h4>
<%= link_to "+", new_admin_item_path %>
<div>
    <table>
        <thead>
            <% @items.each do |item| %>
            <tr>
                <th>
                    商品ID
                </th>
                <th>
                    商品名
                </th>
                <th>
                    税抜価格
                </th>
                <th>
                    ジャンル
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= item.id %>
                </td>
                <td>
                    <%= link_to admin_item_path(item.id) do %>
                        <%= item.name %>
                    <% end %>
                </td>
                <td>
                    <%= item.item_price %>
                </td>
                <td>
                    <%= item.genre.name %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= paginate @items %>