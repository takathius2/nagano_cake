

<h4>注文履歴一覧</h4>
<div>
    <table>
        <thead>
            <% @orders.each do |order| %>
            <tr>
                <th>
                    購入日時
                </th>
                <th>
                    購入者
                </th>
                <th>
                    注文個数
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= link_to admin_order_path(order.id) do %>
                        <%= order.created_at.strftime('%Y/%m/%d') %>
                    <% end %>
                </td>
                <td>
                    <%= order.customer.first_name %><%= order.customer.last_name %>
                </td>
                <td>
                    <%= order.order_details.sum(:amount) %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= paginate @orders %>
