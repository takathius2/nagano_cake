<h3>
    <%= order.customer.last_name %><%= order.customer.first_name %>さんの注文履歴</h3>
<div>
    <table>
        <thead>
            <tr>
                <th>購入日時</th>
                <th>注文個数</th>
            </tr>
        </thead>
        <tbody>
    <% order_detail.each do |order_detail| %>
            <tr>
                <td>
                    <%= order_detail.created_at.strftime('%Y/%m/%d') %>
                </td>
                <td>
                    <%= order_detail.amount %>
                </td>
            </tr>
    <% end %>
        </tbody>
    </table>
</div>
