<h1>管理者用商品追加フォーム</h1>
<%= form_with model: @item,url: admin_items_path, method: :post do |f| %>
    <h4>商品画像</h4>
        <%= f.file_field :item_image, accept: "item_image/*" %>
    <h4>商品名</h4>
        <%= f.text_field :name %>
    <h4>商品説明文</h4>
        <%= f.text_area :introduction %>
    <h4>税抜価格</h4>
        <%= f.text_field :item_price %><br>
    <h4>ジャンル名</h4>
        <%= f.select :genre_id, @genres.map { 
        |g| [g.name, g.id]},class: "form-control" %><br>
        <%= link_to "ジャンル一覧", admin_genres_path %> <br>
        
        <%= f.submit '追加' %>
<% end %>